                        END
                        LPF CLONE_EFFECT INT_VAR
                            match_opcode = 134
                            opcode = 142
                            timing = 0
                            duration = 0
                            parameter2 = 41
                            savingthrow = 0
                            silent = 1
                        END
                        LPF CLONE_EFFECT INT_VAR
                            match_opcode = 134
